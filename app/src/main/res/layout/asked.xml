<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/asked"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center|center_vertical"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    tools:context="com.hcid.edulearn.asksimple.AskedActivity">

    <ImageView
        app:srcCompat="@drawable/logo_nocircle"
        android:id="@+id/logo_nocircle"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginBottom="25dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/thanksForAsking"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:maxWidth="200dp"
        android:layout_below="@+id/logo_nocircle"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Thanks for asking!"
        android:textSize="40dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        />

</LinearLayout>
